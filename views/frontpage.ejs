<!-- views/frontpage.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Velkommen til Joe & the Juice</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #F4EAEF; /* Pink baggrundsfarve */
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      background: url('/billeder/bmarble.webp') center/cover no-repeat;
    }

    h1 {
      text-align: center;
      color: #FFF;
    }

    form {
      background-color: #333; /* Sort baggrundsfarve til form */
      color: #FFF; /* Hvid tekstfarve */
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      max-width: 400px;
      width: 100%;
      margin-top: 20px; /* Afstand mellem overskrift og formular */
    }

    button {
      background-color: #000000; /* Sort knapfarve */
      color: #FFF; /* Hvid tekstfarve */
      padding: 10px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      width: 100%;
      margin-bottom: 10px;
    }

    button:hover {
      background-color: #1f1f1f; /* Lysere sort ved hover */
    }
  </style>
</head>
<body>
  <h1>Velkommen til Fahmi Juice</h1>
  <form method="post">
    <button type="submit" name="role" value="employee" formaction="/workerlogin">Medarbejder</button>
    <button type="submit" name="role" value="customer" formaction="/login">Kunde</button>
  </form>
</body>
</html>
